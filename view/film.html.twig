{% extends 'index.html.twig' %} 



{% block content %}

    {% for film in films %}
    <div class="d-flex flex-row"> 
        <div class="image">
            <img src="{{film.image_film}}" alt="img"> 
            </div>
        <section class="contenue">
            <div>
                <h2>{{film.titre}}</h2>
            </div>
            <div>
                <p>Date de sortie : {{film.annee}}</p>
            </div>
            <div>
                <p>
                De : {{film.realisateur}}
                </p>
            </div>
            <div>
                <p>Avec : {{film.acteur}}</p>
            </div>
            <div>
                <p>Genre : {{film.genre}}
                </p>
            </div>
            <div>
                <p>Synopsis : {{film.description}}</p>
            </div>
        </section>
    </div>

    {% endfor %}

{%  endblock %}

{% block menugenre %}
            <section class="container-fluid justify-content-center affichage_genre row" >
                {% for genre in genres %}
                <a href="films/genre/{{genre.id}}">{{genre.type}}</a>
                {% endfor %}

            </section>
{%  endblock %}
  